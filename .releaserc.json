{
  "branches": ["release"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          {
            "type": "build",
            "release": "patch"
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "BREAKING CHANGE", "section": "ğŸ’¥ BREAKING CHANGES" },
            { "type": "feat", "section": "ğŸš€ Features" },
            { "type": "fix", "section": "ğŸ› Bug Fixes" },
            { "type": "chore", "section": "ğŸ”§ Chores" },
            { "type": "docs", "section": "ğŸ“ Documentation" },
            { "type": "style", "section": "ğŸ’… Styles" },
            { "type": "refactor", "section": "ğŸ”¨ Refactoring" },
            { "type": "perf", "section": "âš¡ Performance Improvements" },
            { "type": "test", "section": "âœ… Tests" },
            { "type": "build", "section": "ğŸ—ï¸ Updated dependencies" },
            { "type": "ci", "section": "ğŸ‘· Continuous Integration" }
          ]
        }
      }
    ],
    "@semantic-release/changelog",
    "@semantic-release/npm",
    [
      "@semantic-release/github",
      {
        "message": "chore(release): ${nextRelease.version}",
        "assets": ["CHANGELOG.md", "package.json"]
      }
    ],
    "@semantic-release/git"
  ]
}
